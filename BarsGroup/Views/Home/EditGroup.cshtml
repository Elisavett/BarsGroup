@model BarsGroup.Models.Group

@{
    ViewData["Title"] = "EditGroup";
}

<h1>Редактировать учебную группу</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label">@Model.Teacher.FullName</label>
                <input asp-for="TeacherId" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
            </div>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Студенты
                    </th>
                    <th>
                        Организация
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Students)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Organization.Name)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Удалить из группы</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button>Добавить студента</button>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
